# Configuração do Flask
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=sua_chave_secreta_super_segura_aqui

# Configuração do Banco de Dados
DATABASE_URL=sqlite:///rifamaster.db

# Configuração de Admin (Inicial)
ADMIN_EMAIL=admin@rifamaster.com

# ========================================
# Configuração Efí (Gerencianet) - PSP
# ========================================
# Para alternar entre ambientes, mude apenas esta linha:
# Valores aceitos: "sandbox" ou "production"
EFI_ENVIRONMENT=sandbox

# --- SANDBOX (Homologação/Testes) ---
EFI_SANDBOX_CLIENT_ID=your_sandbox_client_id_here
EFI_SANDBOX_CLIENT_SECRET=your_sandbox_client_secret_here
EFI_SANDBOX_CERTIFICATE_PATH=certs/homologacao.p12
EFI_SANDBOX_PIX_KEY=your_sandbox_pix_key_here

# --- PRODUCTION (Produção) ---
EFI_PRODUCTION_CLIENT_ID=your_production_client_id_here
EFI_PRODUCTION_CLIENT_SECRET=your_production_client_secret_here
EFI_PRODUCTION_CERTIFICATE_PATH=certs/producao.p12
EFI_PRODUCTION_PIX_KEY=your_production_pix_key_here
